@model ChattingApplication.Models.User
@{
    ViewData["Title"] = "Update Profile";
}
<style type="text/css">


    body {
        margin: 0;
        padding: 0;
        font-family: sans-serif;
        background: #5f9ea0;
    }

    .box {
        width: 600px;
        padding: 40px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        background: #191919;
        text-align: center;
        height: 600px;
        border-radius: 15px;
    }

    #Username, #Email, #Mobile, #Password1, #Password2 {
        border: 0;
        background: none;
        display: block;
        margin: 5px auto;
        text-align: center;
        border: 2px solid #3498db;
        padding: 10px 10px;
        width: 300px;
        outline: none;
        color: white;
        border-radius: 24px;
        transition: 0.25s;
    }

    .box td {
        color: white;
    }

    table {
        font-weight: bold;
    }

    .box h1 {
        color: white;
        text-transform: uppercase;
        font-weight: 500;
    }

    #Username:focus {
        width: 280px;
        border-color: #2ecc71;
    }

    #Password2:focus {
        width: 280px;
        border-color: #2ecc71;
    }

    #Password1:focus {
        width: 280px;
        border-color: #2ecc71;
    }

    #Email:focus {
        width: 280px;
        border-color: #2ecc71;
    }

    #Mobile:focus {
        width: 280px;
        border-color: #2ecc71;
    }
    h4,label{
        color:white
    }
</style>
<form enctype="multipart/form-data" action="SaveChanges" method="post" class="box">
    <h4>Update Profile</h4>
    <hr />
    <div class="form-group">
        <label asp-for="Username" class="control-label"></label>
        <input asp-for="Username" class="form-control" name="Username" value=@Model.Username  id="Username"/>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" type="email" name="Email" value=@Model.Email  id="Email"/>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" type="password" name="Password" value=@Model.Password  id="Password1"/>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="control-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" name="ConfirmPassword" value=@Model.ConfirmPassword  id="Password2"/>
    </div>
    <div class="form-group">
        <label asp-for="Mobile" class="control-label"></label>
        <input asp-for="Mobile" class="form-control" name="Mobile" value=@Model.Mobile id="Mobile"/>
    </div>

   
    <div class="form-group">
        <a class="btn btn-danger" asp-controller="User" asp-action="ViewProfile">Back</a>&nbsp;&nbsp;
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}