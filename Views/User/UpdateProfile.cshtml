@model ChattingApplication.Models.User 
@{
    ViewData["Title"] = "Update Profile";
}
<div class="container">
    <div class="card" style="width: 500px; margin-left:auto; margin-right:auto; padding:10px 10px;">
        <h4>Update Profile</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form enctype="multipart/form-data" action="SaveChanges" method="post">
                    <div class="form-group">
                        <label asp-for="Username" class="control-label"></label>
                        <input asp-for="Username" class="form-control" name="Username" value=@Model.Username />
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" type="email" name="Email" value=@Model.Email />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" type="password" name="Password" value=@Model.Password />
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" name="ConfirmPassword" value=@Model.ConfirmPassword />
                    </div>
                    <div class="form-group">
                        <label asp-for="Mobile" class="control-label"></label>
                        <input asp-for="Mobile" class="form-control" name="Mobile" value=@Model.Mobile />
                    </div>

                    <a class="btn btn-danger" asp-controller="User" asp-action="ViewProfile">Back</a>
                    <div class="form-group">
                        <input type="submit" value="Save Changes" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        @section Scripts{
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
        }
    </div>

</div>